<!DOCTYPE html>
<html>
  <head>
    <title>Bloger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in?%>
   <button class='btn btn-secondary'> <%= link_to "Log Out", destroy_user_session_path, method: :delete %></button>
   <%else%>
   <button class='btn btn-secondary'> <%= link_to "Log In", new_user_session_path %></button>
    <%end%>
    <%= yield %>
  </body>
</html>
