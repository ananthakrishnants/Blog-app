<!DOCTYPE html>
<html>
  <head>
    <title>Bloger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto"> 
         <% if user_signed_in?%>
          <li class="nav-item active">
             <%=link_to image_tag(current_user.profile_pic.url, :size => "100x33" ),current_user.profile_pic.url%> 
          </li>
          <li class="nav-item active">
             <button class='btn btn-secondary'> <%= link_to "Log Out", destroy_user_session_path, method: :delete %></button>
          </li>
          <li class="nav-item active">
            <button class="btn btn-secondary btn-block">  <%=link_to 'Edit Profile', edit_user_registration_path   %></button>
          </li>
         <%else%>
            <button class='btn btn-secondary'> <%= link_to "Log In", new_user_session_path %></button>
          <%end%> 
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
