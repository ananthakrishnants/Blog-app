<div><h2>New Posts</h2></div>

<%= form_with scope: :post,url: posts_path, local: true do |form| %>
 <%= form.hidden_field :user_id, :value=>current_user.id%>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
 
  <p>
    <%= form.submit :class=>"btn btn-outline-success"%>
  </p>
<% end %>