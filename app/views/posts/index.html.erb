
<h1 align=center>Listing posts</h1>
 
<table class="table">
  <tr>
    <th >created by</th>
    <th >body</th>
    <th></th>
    
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.user.email %></td>
      <td ><%= post.body %></td>
      <td><button class='btn btn-secondary'><%= link_to 'Show', post_path(post) %></button></td>
      
      <!-- <td ><button class='btn btn-secondary'><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></button></td> -->
      
      
    </tr>
  <% end %>
</table>
<td><button class='btn btn-secondary'><%= link_to 'New Post',new_post_path%></button></td>